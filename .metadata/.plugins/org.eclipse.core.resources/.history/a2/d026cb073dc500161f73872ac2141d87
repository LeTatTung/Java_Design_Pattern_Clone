package com.letattung.builderpattern1;

import java.util.ArrayList;

public class Meal {

	private ArrayList<Item> items = new ArrayList<>();
	
	public void addItem(Item item){
		items.add(item);
	}
	public float getCost(){
		float cost = 0.0f;
		for (Item item : items){
			cost += item.price();
		}
		return cost;
	}
}
